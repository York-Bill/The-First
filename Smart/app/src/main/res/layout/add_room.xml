<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.john.waveview.WaveView
        android:elevation="3dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        wave:above_wave_color="#ffffff"
        wave:blow_wave_color="#ffffff"
        wave:progress="5"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle"
        android:layout_height="150dp">
    </com.john.waveview.WaveView>
    <LinearLayout
        android:elevation="4dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageButton
                android:id="@+id/ib_back_add_room"
                android:background="@drawable/bt_press_2"
                android:layout_gravity="left"
                android:src="@drawable/ic_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize" />
            <TextView
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="创建房间"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/ll_change"
                android:elevation="6dp"
                android:gravity="center"
                android:background="@drawable/yuan_test"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:id="@+id/cl_addall_headImage"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                </LinearLayout>
        <TextView
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
        <EditText
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/et_add_name"
        android:gravity="left|center_vertical"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:hint="名字"
        />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/bt_addRoom"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/bt_press_2"
            android:padding="10dp"
            android:text="创建此房间"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:elevation="5dp"
        android:id="@+id/ll_head_room"
        android:visibility="invisible"
        android:background="#66000000"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    <GridView
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:elevation="5dp"
        android:gravity="bottom"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:descendantFocusability="blocksDescendants"
        android:background="#a0000000"
        android:id="@+id/gv_head_room"
        android:numColumns="6"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>
    </LinearLayout>
</RelativeLayout>