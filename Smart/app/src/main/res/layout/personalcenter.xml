<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout
		android:id="@+id/ll_twocode"
		android:visibility="gone"
		android:background="#ffffff"
		android:elevation="5dp"
		android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<ImageView
			android:id="@+id/mytwocode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:background="@drawable/personalcenter1"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
    <LinearLayout 
        android:background="@color/colorPrimary"
        android:layout_height="0dp"
        android:layout_weight="5.2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
		<ImageButton
			android:src="@drawable/ic_back"
			android:background="@drawable/bt_press_2"
			android:id="@+id/button_back"
        	android:layout_width="0dp"
        	android:layout_weight="1.2"
        	android:layout_height="match_parent"
        />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            />
        <Button 
            android:id="@+id/change"
			android:background="@drawable/bt_press_2"
            android:text="保存"
            android:textSize="17sp"
            android:layout_weight="1.5"
            android:textColor="#eae9e9"
            android:layout_width="0dp"
        	android:layout_height="match_parent"
            />
    </LinearLayout>
  
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="7.9"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="我的二维码"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
    <ImageButton
        android:elevation="5dp"
        android:background="#00000000"
        android:layout_gravity="right"
        android:id="@+id/two_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
	</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="3.8"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="昵称"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
	<EditText
		android:layout_weight="1"
	    android:singleLine="true"
        android:background="@null"
	    android:id="@+id/pname" 
	    android:layout_gravity="right"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	     android:hint="你的昵称"
	      android:paddingRight="12dp"
	     android:textColor="#434343"
	      android:textSize="15sp"
	      android:gravity="right|center_vertical"
	    />
		</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="3.7"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="账号/电话号码"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
	<TextView
		android:gravity="center_vertical"
	    android:id="@+id/phone_number" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
         android:textSize="15sp"
        android:textColor="#434343"
         android:paddingRight="12dp"
        />
	</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="3.2"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="电子邮箱"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
	<TextView
		android:gravity="center_vertical"
	    android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:layout_gravity="right"
        android:textColor="#434343"
         android:paddingRight="12dp"
        />
		</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.1"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="2.8"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="地址"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
	<EditText
	    android:singleLine="true"
        android:background="@null"
	    android:id="@+id/place" 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_gravity="right"
	     android:hint="你的地址"
	      android:textSize="15sp"
	      android:gravity="right|center_vertical"
	       android:paddingRight="12dp"
	      android:textColor="#434343"
	    />
		</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3.8"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="2.8"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="性别"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
	<EditText
	    android:singleLine="true"
        android:background="@null"
	    android:id="@+id/sex" 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_gravity="right"
	     android:hint="你的性别"
	      android:textSize="15sp"
	      android:textColor="#434343"
	       android:paddingRight="12dp"
	      android:gravity="right|center_vertical"
	    />
		</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="2.8"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="职业"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
	<EditText
	    android:id="@+id/area" 
	    android:hint="你的职业"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:singleLine="true"
        android:background="@null"
        android:layout_gravity="right"
        android:gravity="right|center_vertical"
         android:textSize="15sp"
          android:paddingRight="12dp"
         android:textColor="#434343"
	    />
		</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        />
	<LinearLayout
		android:paddingLeft="20dp"
		android:orientation="horizontal"
		android:layout_weight="2.8"
		android:layout_width="match_parent"
		android:layout_height="0dp">
		<TextView
			android:layout_weight="1"
			android:textSize="16sp"
			android:gravity="center_vertical"
			android:text="个性签名"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
	<EditText
		android:paddingRight="12dp"
	    android:id="@+id/psign" 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:singleLine="true"
        android:background="@null"
        android:hint="个性签名"
        android:layout_gravity="right"
        android:gravity="right|center_vertical"
         android:textSize="14sp"
         android:textColor="#434343"
	    />
		</LinearLayout>
	<TextView
		android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        />
	<Button 
	    android:id="@+id/turnoff"
	    android:text="退出账号"
	    android:textSize="20sp"
	    android:textColor="#ebe8e7"
	    android:gravity="center_horizontal|center_vertical"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="5.1"
	    android:background="#b0ff3333"
	    />
</LinearLayout>
	</RelativeLayout>