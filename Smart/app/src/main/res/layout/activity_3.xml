<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/bg_activity3"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:background="#70000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_weight="5.5"
            android:id="@+id/cl_activity3_headImage"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_userheadimage1"
            android:layout_height="0dp" />
    <TextView
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:text="Tyhj"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:id="@+id/tv_activity3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#aaaaaa"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="这位同学很懒，什么都没有留下~"
        android:textSize="12sp"
        android:id="@+id/signnature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:text="收藏"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <TextView
                    android:textColor="#dddddd"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="25个收藏"
                    android:layout_weight="2"
                    android:id="@+id/tv_collect_count"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
            </LinearLayout>
            <TextView
                android:layout_weight="0.005"
                android:layout_margin="6dp"
                android:background="#777777"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            //
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:text="设备"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <TextView
                    android:textColor="#dddddd"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="25个设备"
                    android:layout_weight="2"
                    android:id="@+id/tv_all_count"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
            </LinearLayout>
            <TextView
                android:layout_weight="0.005"
                android:layout_margin="6dp"
                android:background="#777777"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:text="情景模式"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <TextView
                    android:textColor="#dddddd"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="25个模式"
                    android:layout_weight="2"
                    android:id="@+id/tv_room_count"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
            </LinearLayout>
            //
        </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
       android:padding="20dp"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
       <LinearLayout
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <LinearLayout
               android:layout_gravity="center"
               android:gravity="center"
               android:id="@+id/ll_activity3_1"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/iv3_1"
                   android:src="@drawable/model_manage"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="35dp"
                   android:layout_height="35dp" />
               <TextView
                   android:text="情景模式"
                   android:layout_marginTop="10dp"
                   android:padding="10dp"
                   android:gravity="left|center_vertical"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:gravity="center"
               android:id="@+id/ll_activity3_2"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/iv3_2"
                   android:src="@drawable/equipment_manage"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="35dp"
                   android:layout_height="35dp" />
               <TextView
                   android:text="智能设备中心"
                   android:layout_marginTop="10dp"
                   android:padding="10dp"
                   android:gravity="left|center_vertical"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:gravity="center"
               android:id="@+id/ll_activity3_3"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/iv3_3"
                   android:src="@drawable/ic_room_manage"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="35dp"
                   android:layout_height="35dp" />
               <TextView
                   android:text="我的房间"
                   android:layout_marginTop="10dp"
                   android:padding="10dp"
                   android:gravity="left|center_vertical"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ll_activity3_4"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv3_4"
                    android:src="@drawable/ic_preset"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <TextView
                    android:text="预约定时"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_activity3_5"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv3_5"
                    android:src="@drawable/ic_manage_control"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <TextView
                    android:text="控制中心"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_activity3_6"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv3_6"
                    android:src="@drawable/ic_myset"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <TextView
                    android:text="个人信息"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>