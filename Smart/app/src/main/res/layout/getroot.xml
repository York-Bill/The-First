<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_back_addRoot"
            android:background="@drawable/bt_press_2"
            android:gravity="left"
            android:layout_gravity="left"
            android:src="@drawable/ic_back"
            android:layout_width="50dp"
            android:layout_height="?attr/actionBarSize" />
        <TextView
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textSize="16sp"
            android:text="授权管理"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_change"
            android:elevation="6dp"
            android:gravity="center"
            android:background="@drawable/yuan_test"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:src="@drawable/getroot"
                android:background="#00000000"
                android:layout_gravity="center"
                android:id="@+id/cl_addall_headImage"
                android:layout_width="55dp"
                android:layout_height="55dp" />
        </LinearLayout>
        <TextView
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="30dp"
            android:paddingBottom="5dp"
            android:textSize="13sp"
            android:text="已授权账号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:paddingBottom="5dp"
            android:id="@+id/etgetuserid"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#999999"
            android:paddingLeft="20dp"
            android:hint="输入你将授权的账号"
            android:singleLine="true"
            android:textSize="17sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ivsaoTwo"
                android:background="#dddddd"
                android:elevation="5dp"
                android:src="@drawable/ic_menu_twocode"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <Button
            android:background="@drawable/bt_press_2"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="查找"
            android:textSize="18sp"
            android:id="@+id/btfinduser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>