<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_back_controlCenter"
            android:background="@drawable/bt_press_2"
            android:gravity="left"
            android:layout_gravity="left"
            android:src="@drawable/ic_back"
            android:layout_width="50dp"
            android:layout_height="?attr/actionBarSize" />
        <TextView
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textSize="16sp"
            android:text="控制中心管理"
            />
        </LinearLayout>
        <LinearLayout
            android:elevation="5dp"
            android:orientation="horizontal"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/ll_change"
                android:elevation="6dp"
                android:gravity="center"
                android:background="@drawable/yuan_test"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/ic_controlcenter"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:id="@+id/cl_addall_headImage"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
            </LinearLayout>
            <TextView
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="50dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <EditText
        android:inputType="text"
        android:gravity="center"
        android:textSize="18sp"
        android:hint="控制中心编号"
        android:background="@null"
        android:id="@+id/etContalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:background="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <EditText
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:hint="请输入密码"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:id="@+id/etContalPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:background="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <Button
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:background="@drawable/bt_press_2"
            android:textSize="17sp"
            android:text="开始配置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>