<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.john.waveview.WaveView
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        wave:above_wave_color="#ffffff"
        wave:blow_wave_color="#ffffff"
        wave:progress="5"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle"
        android:layout_height="150dp">
    </com.john.waveview.WaveView>
    <LinearLayout
        android:elevation="4dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageButton
            android:id="@+id/ib_back_add_room"
            android:background="@drawable/bt_press_2"
            android:layout_gravity="left"
            android:src="@drawable/ic_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize" />
        <TextView
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
            <LinearLayout
                android:elevation="5dp"
                android:gravity="center"
                android:background="@drawable/yuan_test"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:background="#00000000"
                    android:elevation="-5dp"
                    android:layout_gravity="center"
                    android:id="@+id/cl_addall_headImage"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                </LinearLayout>
        <TextView
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:background="@drawable/bt_press_2"
            android:gravity="center"
            android:id="@+id/ib_save_add_room"
            android:layout_gravity="left"
            android:src="@drawable/savaequipment"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize" />
    </LinearLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/et_add_name"
        android:gravity="left|center_vertical"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:hint="名字"
        />
    <ListView
        android:id="@+id/lv_listforall"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_head_room"
        android:visibility="invisible"
        android:background="#00000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <GridView
        android:elevation="5dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:descendantFocusability="blocksDescendants"
        android:background="#a0000000"
        android:id="@+id/gv_head_room"
        android:numColumns="6"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>
    </LinearLayout>
    <LinearLayout
        android:elevation="3dp"
        android:id="@+id/ll_add_equipment"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/addequipment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>