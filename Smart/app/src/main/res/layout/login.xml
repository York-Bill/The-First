<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_login"
    android:orientation="vertical"
    android:background="@drawable/bg_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="17.22"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
    <TextView
        android:layout_weight="11.22"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="4.16"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:background="#00000000"
                android:id="@+id/bt_login_left"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:background="#00000000"
                android:id="@+id/bt_login_right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="1.84"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_weight="4.09"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_weight="7.34"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:background="@null"
            android:hint="账号/手机号"
            android:id="@+id/et_number"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3.76"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_weight="1.76"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="3.88"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_weight="7.34"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:hint="密码"
            android:background="@null"
            android:id="@+id/et_password"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3.76"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_weight="2.61"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#00000000"
        android:id="@+id/bt_login"
        android:layout_weight="4.02"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="1.27"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/forget_password"
        android:gravity="center_horizontal"
        android:text="忘记密码？"
        android:layout_weight="1.84"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="24.62"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_register"
        android:visibility="invisible"
        android:background="@drawable/bg_register"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="11.22"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="4.23"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/bt_register_left"
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/bt_register_right"
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="2.75"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="4.03"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="7.34"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:background="@null"
                android:hint="账号/手机号"
                android:id="@+id/et_register_number"
                android:layout_weight="27"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="3.76"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="1.69"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="4.08"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="7.34"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:hint="邮箱"
                android:background="@null"
                android:id="@+id/et_register_email"
                android:layout_weight="27"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="3.76"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="1.77"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="3.96"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="7.34"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:hint="密码"
                android:background="@null"
                android:id="@+id/et_register_password"
                android:layout_weight="27"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="3.76"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="1.83"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="3.88"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="7.34"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:hint="密码确认"
                android:background="@null"
                android:id="@+id/et_sure_password"
                android:layout_weight="27"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="3.76"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="2.81"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Button
            android:background="#00000000"
            android:id="@+id/bt_register"
            android:layout_weight="3.75"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_weight="15.38"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
</RelativeLayout>