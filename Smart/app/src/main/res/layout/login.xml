<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
   <HorizontalScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/bg_login"
           android:background="@drawable/bg_login"
           android:layout_width="wrap_content"
           android:layout_height="match_parent" />
   </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/ll"
        android:background="#10000000"
        android:orientation="vertical"
        android:translationZ="3dp"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <!--
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="15.18"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="17sp"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:text="用户登陆"
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <ImageButton
                android:id="@+id/ib_user_headImage"
                android:elevation="7dp"
                android:background="@drawable/ic_avatar"
                android:layout_gravity="center_horizontal"
                android:layout_width="96dp"
                android:layout_height="96dp" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_user"
                android:padding="5dp"
                android:layout_weight="1.55"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:paddingLeft="10dp"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:hint="账号/手机号码"
                android:textColorHint="#dddddd"
                android:textColor="#eeeeee"
                android:id="@+id/et_number_1"
                android:layout_weight="7.45"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="5.24"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_pas"
                android:padding="5dp"
                android:layout_weight="1.55"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:textColor="#eeeeee"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:hint="密码"
                android:textColorHint="#dddddd"
                android:id="@+id/et_password_1"
                android:layout_weight="7.45"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="4.84"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="2.02"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="3.39"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="登  陆"
                android:gravity="center"
                android:background="@drawable/bt_press_2"
                android:id="@+id/bt_login_1"
                android:layout_weight="8.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="3.35"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="1.75"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_gravity="left"
                android:textSize="12sp"
                android:id="@+id/bt_register_1"
                android:textColor="#ffffff"
                android:text="新用户"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="4.20"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textSize="12sp"
                android:id="@+id/bt_forgetPas"
                android:textColor="#ffffff"
                android:text="忘记密码？"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>