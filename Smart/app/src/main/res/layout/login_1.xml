<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_login_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_weight="17.18"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1.55"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_user"
            android:padding="5dp"
            android:layout_weight="1.55"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:paddingLeft="10dp"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
           android:hint="账号/手机号码"
            android:textColorHint="#dddddd"
            android:textColor="#eeeeee"
            android:background="@null"
            android:id="@+id/et_number_1"
            android:layout_weight="7.45"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="5.24"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1.55"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_pas"
            android:padding="5dp"
            android:layout_weight="1.55"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:textColor="#eeeeee"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:hint="密码"
            android:textColorHint="#dddddd"
            android:id="@+id/et_password_1"
            android:background="@null"
            android:layout_weight="7.45"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="4.84"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_weight="2.2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="2.02"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_weight="3.39"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="登    陆"
            android:gravity="center"
            android:background="@drawable/bt_press"
            android:id="@+id/bt_login_1"
            android:layout_weight="10.9"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="3.35"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_weight="1.75"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:textSize="12sp"
            android:id="@+id/bt_register_1"
            android:textColor="#ffffff"
            android:text="注册"
            android:background="#00000000"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:textSize="12sp"
            android:id="@+id/bt_forgetPas"
            android:textColor="#ffffff"
            android:text="忘记密码？"
            android:background="#00000000"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="4.20"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_weight="1.8"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>