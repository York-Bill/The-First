<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginTop="80dp"
        android:background="#fbfbfb"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:elevation="2dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="房间"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Api_sours.NoScrollGridView
        android:horizontalSpacing="1dp"
        android:background="#efefef"
        android:verticalSpacing="1dp"
        android:numColumns="4"
        android:padding="1dp"
        android:id="@+id/gv_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Api_sours.NoScrollGridView>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/llIfFind"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@drawable/icaddroomifnull"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:text="添加房间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
      android:padding="10dp"
        android:background="#fefefe"
        android:textSize="16sp"
        android:text="类型"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    //1
        <TextView
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    <LinearLayout
        android:elevation="1dp"
        android:background="#fcfcfc"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:id="@+id/ib_extend_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_type_1"
            android:padding="15dp"
            android:textSize="15sp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/type1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingRight="10dp"
            android:id="@+id/tv_ad_equipment_count_1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Api_sours.NoScrollListView
        android:paddingLeft="10dp"
        android:id="@+id/lv_equipmentType_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Api_sours.NoScrollListView>
