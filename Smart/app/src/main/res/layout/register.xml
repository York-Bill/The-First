<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/suggest_toolbar"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:id="@+id/ib_back_register"
            android:background="@drawable/bt_press_2"
            android:gravity="left"
            android:layout_gravity="left"
            android:src="@drawable/ic_back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="账号注册"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:text="昵称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_register_name"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#999999"
            android:hint="您的昵称"
            android:singleLine="true"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:text="手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:id="@+id/et_register_phoneNumber"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#999999"
            android:hint="您的登陆账号"
            android:singleLine="true"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:text="邮箱"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/et_register_email"
            android:paddingLeft="15dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:textColorHint="#999999"
            android:hint="将会通过邮箱联系您"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:text="密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_register_password"
            android:paddingLeft="15dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:textColorHint="#999999"
            android:hint="登录密码需不小于8位"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:text="密码确认"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_register_password_check"
            android:paddingLeft="15dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:textColorHint="#999999"
            android:hint="再次输入您的密码"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/bt_press_2"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="立即注册"
            android:textSize="18sp"
            android:id="@+id/bt_creatUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>